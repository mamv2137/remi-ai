# Google Gemini AI API Key
# Get it from: https://aistudio.google.com/app/apikey
GOOGLE_GENERATIVE_AI_API_KEY="your-google-api-key-here"

# Neon Database Connection String
# Get it from: https://console.neon.tech/
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# Supabase Configuration (for authentication)
# Get it from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"

# Kapso WhatsApp Cloud API (optional - for WhatsApp integration)
# Get it from: https://kapso.com/
KAPSO_API_KEY="your-kapso-api-key-here"
KAPSO_PHONE_NUMBER_ID="your-phone-number-id"

# Reminders API (optional - for reminder scheduling)
# Get it from: https://reminders-api.com/
REMINDERS_API_KEY="your-reminders-api-key-here"
REMINDERS_API_CALLBACK_URL="https://your-domain.com/api/callback/reminder"
